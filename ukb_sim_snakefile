def get_sumstats_for_mtag_input_files(wildcards):
    DATASET = wildcards.DATASET
    return expand(config["TMP"]+"/"+config["DATA_PREFIX"]+"_chr{CHR}_sumstats_for_mtag_trait{TRAIT}_{DATASET}.txt", DATASET=DATASET, CHR=CHR, TRAIT=config["TRAIT"])
 
def get_sumstats_mtag_output_files(wildcards):
    DATASET = wildcards.DATASET
    return expand(config["TMP"]+"/"+config["DATA_PREFIX"]+"_chr{CHR}_sumstats_mtag_{DATASET}_trait_{TRAIT}.txt", DATASET=DATASET, CHR=CHR, TRAIT=config["TRAIT"])
   
rule compute_mtag_summary_stats_by_chr:
  input:
    lambda wildcards: get_sumstats_for_mtag_input_files(wildcards)
  output:
    lambda wildcards: get_sumstats_mtag_output_files(wildcards)
  params:
    ldscores=ldmat=config["LDSCORES"],
    out_prefix=config["TMP"]+"/"+config["DATA_PREFIX"]+"_chr{CHR}_sumstats_mtag_{DATASET},
    maf_min=0.0,
    n_min=0.0
  resources: cpus=4, mem_mb=10000, time_min=120
  shell:
        """
        python2 /data2/morgante_lab/fabiom/software/mtag/mtag.py  \
	              --sumstats /scratch3/fabiom/tmp/ss_test21_trait1.txt,/scratch3/fabiom/tmp/ss_test21_trait2.txt \
	              --ld_ref_panel {params.ldscores} \
	              --out {params.out_prefix} \
	              --maf_min {params.maf_min} \
	              --n_min {params.n_min} \
	              --incld_ambig_snps
        """

