rule fit_mtag_ldpred2auto_by_chr_trait:
  input:
    sumstats=config["DEST"]+"output/mtag_summary_statistics/"+config["DATA_PREFIX"]+"_chr{CHR}_sumstats_mtag_{DATASET}.rds",
    ldmat=config["LDMAT"]+config["LDMAT_PREFIX"]+"{CHR}_LD_sparse.rds"
  output:
    config["DEST"]+"output/ldpred2_auto_fit/"+config["DATA_PREFIX"]+"_chr{CHR}_mtag_ldpred2_auto_fit_trait{TRAIT}_{DATASET}.rds"
  params:
    n=config["N_TRAIN"],
    h2_init=config["H2_INIT"],
    burn_in=config["MTAG_LDPRED_BURN_IN"],
    num_iter=config["MTAG_LDPRED_ITER"],
    trait="{TRAIT}",
    dataset="{DATASET}",
    chr="{CHR}",
    tmp=config["TMP"],
    script=config["SCRIPT"]+"fit_ldpred2auto_ukb.R"
  resources: cpus=4, mem_mb=50000, time_min=720
  shell:
        """
        source /opt/intel/oneapi/mkl/2023.0.0/env/vars.sh intel64
        module load R/4.2.3
        export MKL_NUM_THREADS=1
        export OMP_NUM_THREADS=1
        Rscript {params.script} \
                                    --sumstats {input.sumstats} \
                                    --LD_matrix {input.ldmat} \
                                    --n {params.n} \
                                    --h2_init {params.h2_init} \
                                    --burn_in {params.burn_in} \
                                    --num_iter {params.num_iter} \
                                    --trait {params.trait} \
                                    --ncores 4 \
                                    --seed {params.dataset} \
                                    --temp_dir {params.tmp} \
                                    --output {output}
        module unload R/4.2.3
        """

def get_mtag_ldpred2_input_files(wildcards):
    DATASET = wildcards.DATASET
    return expand(config["DEST"]+"output/mtag_ldpred2_auto_fit/"+config["DATA_PREFIX"]+"_chr{CHR}_mtag_ldpred2_auto_fit_trait{TRAIT}_{DATASET}.rds", DATASET=DATASET, CHR=config["CHR"],TRAIT=config["TRAIT"])

rule compute_prediction_accuracy_mtag_ldpred2:
  input:
    pheno=config["DEST"]+"data/phenotypes/simulated/"+config["DATA_PREFIX"]+"_pheno_{DATASET}.rds",
    geno=config["BED"],
    tids=config["DEST"]+"data/phenotypes/simulated/"+config["DATA_PREFIX"]+"_test_ids_{DATASET}.txt",
    list=lambda wildcards: get_mtag_ldpred2_input_files(wildcards)
  output:
    eff=config["DEST"]+"output/estimated_effects/"+config["DATA_PREFIX"]+"_mtag_ldpred2_auto_effects_{DATASET}.rds",
    pred_acc=config["DEST"]+"output/prediction_accuracy/"+config["DATA_PREFIX"]+"_mtag_ldpred2_auto_pred_acc_{DATASET}.rds"
  params:
    model=config["MTAG_LDPRED_MODEL"],
    model_fit_dir=config["MTAG_LDPRED_MODEL_FIT_DIR"],
    dataset="{DATASET}",
    chr_r=config["CHR_RANGE"],
    trait_r=config["TRAIT_RANGE"],
    imp_flag=config["IMPUTE_FLAG"],
    script=config["SCRIPT"]+"compute_prediction_accuracy_ukb.R",
    tmp=config["TMP"],
    norm_pheno=config["NORMALIZE_PHENO"],
    prefix=config["DATA_PREFIX"]
  resources: cpus=4, mem_mb=50000, time_min=120
  shell:
        """
        source /opt/intel/oneapi/mkl/2023.0.0/env/vars.sh intel64
        module load R/4.2.3
        export MKL_NUM_THREADS=1
        export OMP_NUM_THREADS=4
        Rscript {params.script} \
                                    --model {params.model} \
                                    --model_fit_dir {params.model_fit_dir} \
                                    --pheno {input.pheno} \
                                    --geno {input.geno} \
                                    --test_ids {input.tids} \
                                    --data_id {params.dataset} \
                                    --chr {params.chr_r} \
                                    --trait {params.trait_r} \
                                    --impute_missing {params.imp_flag} \
                                    --output_eff {output.eff} \
                                    --output_pred_acc {output.pred_acc} \
                                    --temp_dir {params.tmp} \
                                    --normalize {params.norm_pheno} \
                                    --ncores 4 \
                                    --prefix {params.prefix}
        module unload R/4.2.3
        """
